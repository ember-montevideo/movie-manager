<main>
  <div class="vessel">
    {{ input value=imdbId }}
    <button name="button" {{action 'createRecord'}}>Create Record</button>
    <hr>
    <ul id="movies">
      {{#each}}
      <li>
        <div class="movie">
          <div class="poster">
            <a href="http://www.imdb.com/title/movie.imdbID/">
              <img {{bind-attr src=poster alt=title}}>
            </a>
          </div>
          <div class="data">
            <header>
              <h2>{{title}} <span>{{year}}</span></h2>
            </header>
            <div class="scores">
              <div class="rect" {{bind-attr style=imdbBarStyle}}>
                <s>
                  <u>IMDB</u>
                  <b>{{imdbScore}}</b>
                </s>
              </div>
              <div class="rect" {{bind-attr style=tomatoBarStyle}}>
                <s>
                  <u>Rotten Tomatoes</u>
                  <b>{{tomatoScore}}</b>
                </s>
              </div>
            </div>
            <div class="text-block">
              <p>{{plot}}</p>
            </div>
            <div class="text-block smaller">
              <p>{{actors}}</p>
            </div>
            <dl class="details smaller">
              <dt>Genre:</dt>
              <dd>{{genre}}</dd>
              <dt>Runtime:</dt>
              <dd>movie.Runtime | minToHours</dd>
              <dt>Awards:</dt>
              <dd>movie.Awards</dd>
              <dt>Writer:</dt>
              <dd>movie.Writer</dd>
              <dt>Director:</dt>
              <dd>movie.Director</dd>
            </dl>
            <div class="text-block smaller">
              <p>
                <a href="http://www.subdivx.com/index.php?buscar=movie.Title | encodeUri&accion=5&masdesc=&subtitulos=1&realiza_b=1">subs</a>
              </p>
            </div>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</main>
